<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />

  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %> 
  <%= f.collection_select :genre_id, @genre, :id, :name %> 
  <br>

  <%= f.label :song_notes_content %> 
  <%= f.fields_for :notes do |note_contents| %> 
    <%= note_contents.label :song_notes_1 %> 
    <%= note_contents.text_field :content %> 

    <%= note_contents.label :song_notes_2 %>
    <%= note_contents.text_field :content %> 
    <% end %> 
  <br>



  <%= f.submit %>
<% end %>


